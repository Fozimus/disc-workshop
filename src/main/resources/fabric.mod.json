{
	"schemaVersion": 1,
	"id": "discworkshop",
	"version": "${version}",
	"name": "Disc Workshop",
	"description": "You can craft music discs using a disc workshop, these discs can be played in the jukebox to listen to any hosted audio via URL.",
	"authors": [
		"Fozimus",
        "Rojaha"
	],
	"contact": {
		"homepage": "https://modrinth.com/mod/disc-workshop",
		"sources": "https://github.com/Fozimus/disc-workshop"
	},
	"license": "CC BY-NC 4.0",
	"icon": "assets/discworkshop/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"io.github.fozimus.discworkshop.DiscWorkshop"
		],
		"client": [
			"io.github.fozimus.discworkshop.DiscWorkshopClient"
		],
		"fabric-datagen": [
			"io.github.fozimus.discworkshop.DiscWorkshopDataGenerator"
		],
        "modmenu": [
            "io.github.fozimus.discworkshop.config.ModMenuIntegration"
        ]
	},
	"mixins": [
		"discworkshop.mixins.json",
		{
			"config": "discworkshop.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.16.14",
		"minecraft": "~1.21.1",
		"java": ">=21",
		"fabric-api": "*"
	},
	"suggests": {
		"another-mod": "*"
	}
}
